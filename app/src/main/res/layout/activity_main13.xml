<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:gravity="center"
    android:weightSum="2"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity13">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:clipToPadding="false">
    <android.support.v7.widget.CardView
        android:clickable="true"
        android:layout_margin="10dp"
        app:cardCornerRadius="30dp"
        android:id="@+id/b1"
        android:onClick="Test"
        app:cardElevation="2dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"

            android:layout_height="match_parent">

            <ImageView
                android:padding="10dp"
                android:layout_width="200dp"

                android:src="@drawable/ds1"
                android:layout_height="200dp">
            </ImageView>

            <View
                android:background="#D7C71A"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                ></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="পরীক্ষা করুন আপনি কি করোনা ভাইরাসে আক্রান্ত"
                android:textStyle="bold"
                >

            </TextView>
            
        </LinearLayout>
        
    </android.support.v7.widget.CardView>




        <android.support.v7.widget.CardView
            android:clickable="true"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:cardCornerRadius="30dp"
            android:id="@+id/b2"
            android:onClick="info"
            app:cardElevation="2dp"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:padding="10dp"
                    android:layout_width="200dp"
                    android:src="@drawable/ds2"
                    android:layout_height="200dp">
                </ImageView>

                <View
                    android:background="#D7C71A"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    ></View>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="প্রতিরোধমুলক বেবস্থার জন্য এখানে
ক্লিক করুন"
                    android:textStyle="bold"
                    >

                </TextView>

            </LinearLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:clipToPadding="false">
        <android.support.v7.widget.CardView
            android:clickable="true"
            android:layout_margin="10dp"
            app:cardCornerRadius="30dp"
            android:id="@+id/b3"
            android:onClick="contact"
            android:layout_weight="1"
            app:cardElevation="2dp"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:padding="10dp"
                    android:layout_width="200dp"
                    android:src="@drawable/ds3"
                    android:layout_height="200dp">
                </ImageView>

                <View
                    android:background="#D7C71A"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"

                    android:layout_margin="10dp"
                    ></View>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="যোগাযোগের তথ্য এখানে ক্লিক করুন "
                    android:textStyle="bold"
                    >

                </TextView>

            </LinearLayout>

        </android.support.v7.widget.CardView>




        <android.support.v7.widget.CardView
            android:clickable="true"
            android:layout_margin="10dp"
            app:cardCornerRadius="30dp"
            android:layout_weight="1"
            android:id="@+id/b4"
            android:onClick="webpage"
            app:cardElevation="2dp"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:padding="10dp"
                    android:layout_width="200dp"
                    android:src="@drawable/ds4"
                    android:layout_height="200dp">
                </ImageView>

                <View
                    android:background="#D7C71A"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    ></View>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="বিশ্বের বর্তমান আপডেট"
                    android:textStyle="bold"
                    >

                </TextView>

            </LinearLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>


</LinearLayout>